<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>JSP and Servlets Oefeningen</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/JSP/voorstellingen.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/JSP/404.jsp</location>
  </error-page>
  <!-- Servlets begin -->
  <servlet>
    <servlet-name>getGenres</servlet-name>
    <servlet-class>be.vdab.cultuurhuis.servlets.SVTGetGenres</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getGenres</servlet-name>
    <url-pattern>/getGenres</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>getVoorstellingen</servlet-name>
    <servlet-class>be.vdab.cultuurhuis.servlets.SVTGetVoorstellingen</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getVoorstellingen</servlet-name>
    <url-pattern>/getVoorstellingen</url-pattern>
  </servlet-mapping>
  <!--  Servlets eind -->
</web-app>